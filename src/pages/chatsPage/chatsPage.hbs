                        <div class="chat-list-item-separator">
                        </div>
                    </p>
                    <nav>
                        <ul class="chat-list">
                            {{#each chats}}
                                {{#if (equals this ../active_chat)}}
                                    {{> ChatListItemBlock chatId=this.chatId party=this.party date=this.date preview=this.preview newMessages=this.newMessages active=true }}
