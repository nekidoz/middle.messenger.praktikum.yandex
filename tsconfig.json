{
    "compilerOptions": {

        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        
        "outDir": "dist",
        "declaration": false,

        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strictNullChecks": true,

        // to import Handlebars
        "allowSyntheticDefaultImports": true,
    }
}